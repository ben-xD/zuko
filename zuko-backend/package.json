    "@tanstack/react-form": "^0.34.1",
    "@tanstack/zod-form-adapter": "^0.34.1",
    "drizzle-orm": "^0.35.3",
    "hono": "^4.6.6",
    "openapi-fetch": "^0.12.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.26.2",
    "openapi-typescript": "^7.4.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
