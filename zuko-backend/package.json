{
  "name": "zuko-backend",
  "private": true,
  "type": "module",
  "exports": {
    "./httpClient": {
      "import": {
        "default": "./dist/httpClient.js",
        "types": "./dist/httpClient.d.ts"
      }
    }
  },
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
